<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kr.co.FiveLastName.staffMapper">

	<!-- 담당자 로그인 -->
	<select id="login" parameterType="java.util.Map" resultType="java.util.Map">
	select st_id, st_pw
	from staff
	where st_id=#{st_id} and st_pw=#{st_pw}
	</select>


	<!-- 담당자 전체 조회 -->
	<select id="st_selectAll" resultType="int"
		parameterType="kr.co.FiveLastName.domain.StaffDTO">
		select * from staff
	</select>
	
	<!-- 담당자 상세 조회 -->
	<select id="st_selectOne" resultType="int"
		parameterType="kr.co.FiveLastName.domain.StaffDTO">
		select * from staff
		where st_id = #{st_id} and st_pw = #{st_pw}
	</select>

</mapper>